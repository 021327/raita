<% if logged_in? %>
  <% if current_user.id == 1 %>
    <p><%= link_to '新規イベント作成', new_event_path, class: 'btn btn-primary' %></p>
  <% end %>
  <%= render 'events/events', events: @events %>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white d-flex flex-column align-items-center">
  <div class="mb-4">
    <h1>Welcome to RAITA</h1>
  </div>
  <div class="mb-4">
    <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %>
  </div>
  <div class="mb-4">
    <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>

