<h1>ユーザー一覧</h1>
<table class="table table-bordered">
<tr>
    <th>ユーザー番号</th>
    <th>名前</th>
    <th>性別</th>
    <th>年齢</th>
</tr>    
<% @users.each do |user| %>
    <% if user.id != 1 %>
    <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.gender == 'Mens' ? '男性' : '女性' %></td>
        <td><%= user.age %>歳 </td>
    </tr>    
    <% end %>
<% end %>
</table>